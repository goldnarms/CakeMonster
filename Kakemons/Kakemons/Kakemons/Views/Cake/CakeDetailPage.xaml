<?xml version="1.0" encoding="UTF-8"?>
<views:ContentPageBase x:TypeArguments="cake:CakeDetailViewModel" xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cake="clr-namespace:Kakemons.Core.ViewModels.Cake;assembly=Kakemons.Core"
             xmlns:controls="clr-namespace:Kakemons.UI.Controls;assembly=Kakemons.UI"
                 xmlns:views="clr-namespace:Kakemons.UI.Views;assembly=Kakemons.UI"
             x:Class="Kakemons.UI.Pages.Cake.CakeDetailPage">
    <ContentPage.Content>
        <ScrollView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="20">
            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical">
                <controls:CakeDetailView 
                CakeModel="{Binding CakeModel}"
                ToggleFavorite="{Binding ToggleFavoriteFunc}"
                GoToBaker="{Binding GoToBakerCommand}"
                    >
                </controls:CakeDetailView>
                <Button VerticalOptions="EndAndExpand" HorizontalOptions="CenterAndExpand" Text="Bestill" Style="{ StaticResource RedButton}" Command="{Binding OrderCakeCommand}"></Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</views:ContentPageBase>